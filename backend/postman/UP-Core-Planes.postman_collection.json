{
  "info": {
    "name": "UP-Core API — Planes",
    "_postman_id": "1f7ad2a9-planes-demo-updated",
    "description": "Planes: hello, login, crear, listar, paginar, detalle, actualizar, desactivar.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key":"baseUrl", "value":"{{baseUrl}}" },
    { "key":"token", "value":"" },
    { "key":"planId", "value":"" },
    { "key":"nextCursor","value":"" }
  ],
  "item": [
    {
      "name": "Login (documento gerente) /users/login",
      "event": [{ "listen":"test","script":{"exec":[
        "let j={}; try{j=pm.response.json()}catch(e){}",
        "if(j && j.token){ pm.environment.set('token', j.token); }"
      ],"type":"text/javascript"}}],
      "request": {
        "method": "POST",
        "header": [{ "key":"Content-Type","value":"application/json"}],
        "body": { "mode":"raw","raw": "{\n  \"documento\": \"{{gerenteDocumento}}\",\n  \"password\": \"secret\"\n}" },
        "url": { "raw": "{{baseUrl}}/users/login", "host": ["{{baseUrl}}"], "path": ["users","login"] }
      }
    },
    { "name":"Planes — Hello /planes/hello", "request":{ "method":"GET","header":[],"url":{"raw":"{{baseUrl}}/planes/hello","host":["{{baseUrl}}"],"path":["planes","hello"] } } },
    {
      "name": "Planes — Crear /planes",
      "event": [{ "listen":"test","script":{"exec":[
        "let j={}; try{j=pm.response.json()}catch(e){}",
        "if(j && j.id){ pm.environment.set('planId', j.id); }"
      ],"type":"text/javascript"}}],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode":"raw","raw": "{\n  \"nombre\": \"Plan 100\",\n  \"vel_down\": 100,\n  \"vel_up\": 50,\n  \"precio_mensual\": 15000,\n  \"descripcion\": \"100/50 Mbps\"\n}" },
        "url": { "raw": "{{baseUrl}}/planes", "host": ["{{baseUrl}}"], "path": ["planes"] }
      }
    },
    {
      "name": "Planes — Listar /planes/all",
      "request": { "method":"GET","header":[{ "key":"Authorization","value":"Bearer {{token}}","type":"text"}],
        "url": { "raw":"{{baseUrl}}/planes/all", "host":["{{baseUrl}}"], "path":["planes","all"] } }
    },
    {
      "name": "Planes — Paginado /planes/paginated",
      "event": [{ "listen":"test","script":{"exec":[
        "let j={}; try{j=pm.response.json()}catch(e){}",
        "if(j && j.next_cursor){ pm.environment.set('nextCursor', j.next_cursor); } else { pm.environment.unset('nextCursor'); }"
      ],"type":"text/javascript"}}],
      "request": {
        "method":"POST",
        "header":[
          { "key":"Authorization","value":"Bearer {{token}}","type":"text" },
          { "key":"Content-Type","value":"application/json" }
        ],
        "body": { "mode":"raw","raw":"{\n  \"limit\": 25,\n  \"last_seen_id\": null\n}" },
        "url": { "raw":"{{baseUrl}}/planes/paginated","host":["{{baseUrl}}"],"path":["planes","paginated"] }
      }
    },
    {
      "name": "Planes — Obtener /planes/{{planId}}",
      "request": { "method":"GET","header":[{ "key":"Authorization","value":"Bearer {{token}}","type":"text"}],
        "url": { "raw":"{{baseUrl}}/planes/{{planId}}","host":["{{baseUrl}}"],"path":["planes","{{planId}}"] } }
    },
    {
      "name": "Planes — Desactivar /planes/{{planId}}",
      "request": { "method":"DELETE","header":[{ "key":"Authorization","value":"Bearer {{token}}","type":"text"}],
        "url": { "raw":"{{baseUrl}}/planes/{{planId}}","host":["{{baseUrl}}"],"path":["planes","{{planId}}"] } }
    }
  ]
}
